<div class="d-flex align-items-center" style="height: 100vh">
  <div class="container text-center">
    <h3 class="text-primary">
      恭喜!
    </h3>
    <p class="text-primary">
      你得到了一枚奖章!
    </p>
    <%= javascript_pack_tag 'confetti' %>
    <%= image_tag "badge.svg", width: "120px" %>
    <p class="text-danger"><%= @record.scenario.title %></p>
    <%=simple_form_for(@record, method: :patch, url: step_record_path(params[:step_id])) do |f| %>
      <%= f.submit "查看所有徽章", class: "button-green mb-4"%>
      <% session[:record_id] = @record.id %>
    <% end %>
    <%=simple_form_for(@record, method: :patch, url: step_record_path(params[:step_id])) do |f| %>
      <%= f.submit "分享到微信", class: "button-purple", style: "width: 156px;"%>
      <div class="sharethis-inline-share-buttons " data-url="https://icantech.wogengapp.cn/" ></div>
      <% session[:record_id] = @record.id %>
    <% end %>
  </div>
</div>