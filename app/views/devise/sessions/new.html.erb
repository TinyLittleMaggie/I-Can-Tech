<div class="container my-5">
  <%= link_to root_path do %>
    <%= image_tag "close-gray.svg", width: "24px" %>
  <% end %>
  <div class="my-5">
    <h3 class="text-primary">登录</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%#= f.hidden_field %>
      <div class="form-inputs">
        <%= f.label :email, '邮箱' %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    input_html: { autocomplete: "email" } %>
        <%= f.label :email, '密码' %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    input_html: { autocomplete: "current-password" } %>
       <!--  <%= f.label :remember_me, '记住我'%> -->
        <%= f.input :remember_me, label: false, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.submit "登录", class: "btn btn-primary text-light btn-block my-3"  %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>